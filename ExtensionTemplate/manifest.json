{
  "manifest_version": 2,
  "name": "Auto login Gmail with Proxy",
  "version": "1.1",
  "description": "configured proxy and Open Popup",
  "permissions": [
      "activeTab",
      "tabs",
      "storage",
      "proxy",
      "webRequest",
      "webRequestBlocking",
      "webNavigation",
      "file://*",
      "<all_urls>",
      "alarms",
      "downloads"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true

    },
    "browser_action": {
        "default_icon": "icons/icon3.png",
        "default_title": "Auto login Gmail with Proxy"
    },
    "icons": {
      "16": "icons/icon1.png",
      "24": "icons/icon2.png",
      "32": "icons/icon3.png",
      "48": "icons/icon4.png"
    },
    "content_scripts": [
      {
          "matches": [
              "*://accounts.google.com/*",
              "*://mail.google.com/*",
              "https://*.google.com/*",
              "*://contacts.google.com/*"
            ],
          "js": ["content.js","actions.js"],
          "run_at": "document_end"
      }
  ],
  "web_accessible_resources": [
    "data.txt",
    "traitement.json",
    "gmail_process.js"


  ]

}
